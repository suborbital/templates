---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: se2-deployment
  namespace: suborbital
  labels:
    app: se2
spec:
  replicas: 1
  selector:
    matchLabels:
      app: se2
  template:
    metadata:
      labels:
        app: se2
    spec:
      containers:
        - name: e2core
          image: suborbital/e2core:{{ .E2CoreTag }}
          command: ["e2core"]
          args: ["start"]
          ports:
            - containerPort: 8080
          env:
            - name: E2CORE_HTTP_PORT
              value: "8080"
            - name: E2CORE_LOG_LEVEL
              value: "info"
            - name: E2CORE_CONTROL_PLANE
              value: "se2-controlplane-service:8081"
          livenessProbe:
            httpGet:
              path: /health
              port: 8080
            failureThreshold: 5
            initialDelaySeconds: 10
            periodSeconds: 15
            timeoutSeconds: 3
          readinessProbe:
            httpGet:
              path: /health
              port: 8080
---
apiVersion: v1
kind: Service
metadata:
  namespace: suborbital
  name: se2-service
spec:
  selector:
    app: se2
  ports:
    - protocol: TCP
      port: 80
      targetPort: 8080
