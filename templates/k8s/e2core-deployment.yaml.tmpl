---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ .Identifier }}-deployment
  namespace: suborbital
  labels:
    app: e2core
spec:
  replicas: 1
  selector:
    matchLabels:
      app: e2core
  template:
    metadata:
      labels:
        app: e2core
    spec:
      containers:
        - name: e2core
          image: {{ .ImageName }}
          command: ["e2core"]
          args: ["start"]
          ports:
            - containerPort: 8080
            - containerPort: 443
          env:
            - name: E2CORE_DOMAIN
              value: {{ .Domain }}
            - name: E2CORE_HTTP_PORT
              value: "8080"
            - name: E2CORE_LOG_LEVEL
              value: "info"
            - name: APP_VERSION
              value: {{ .AppVersion }}
          livenessProbe:
            httpGet:
              path: /health
              port: 8080
            failureThreshold: 5
            initialDelaySeconds: 10
            periodSeconds: 15
            timeoutSeconds: 3
          readinessProbe:
            httpGet:
              path: /health
              port: 8080
